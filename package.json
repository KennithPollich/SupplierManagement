{
  "name": "confidential-supplier-management",
  "version": "1.0.0",
  "description": "FHE-enabled confidential supplier management dApp",
  "main": "index.html",
  "scripts": {
    "dev": "npx http-server . -p 3000 -c-1 --cors",
    "build": "echo 'Static build complete'",
    "start": "npx http-server . -p 8080 -c-1 --cors",
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy": "hardhat run scripts/deploy.ts",
    "deploy:sepolia": "hardhat run scripts/deploy.ts --network sepolia",
    "deploy:zama": "hardhat run scripts/deploy.ts --network zama"
  },
  "keywords": [
    "blockchain",
    "fhe",
    "supplier-management",
    "ethereum",
    "dapp"
  ],
  "author": "Confidential Supplier Management Team",
  "license": "MIT",
  "dependencies": {
    "@fhevm/solidity": "^0.7.0",
    "ethers": "^5.7.2"
  },
  "devDependencies": {
    "@fhevm/hardhat-plugin": "0.0.1-3",
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@types/node": "^18.15.0",
    "hardhat": "^2.24.3",
    "ts-node": "^10.9.0",
    "typescript": "^4.9.0",
    "cross-env": "^7.0.3"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}